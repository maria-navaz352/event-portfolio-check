    <!-- JavaScript for Tab Switching (MUST be here) -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Function to handle tab switching
            window.showYear = (year, clickedButton) => {
                // 1. Hide all content areas
                document.querySelectorAll('.year-content').forEach(content => {
                    content.classList.add('hidden');
                });

                // 2. Show the selected content area
                const selectedContent = document.getElementById('content-' + year);
                if (selectedContent) {
                    selectedContent.classList.remove('hidden');
                }

                // 3. Update active/inactive state of buttons (for visual feedback)
                document.querySelectorAll('.year-tab').forEach(button => {
                    button.classList.remove('tab-active');
                    button.classList.add('tab-inactive');
                });
                clickedButton.classList.add('tab-active');
                clickedButton.classList.remove('tab-inactive');
            };

            // Initialize: Ensure 2025 is shown on load (already set in HTML by default)
        });
    </script>
    
